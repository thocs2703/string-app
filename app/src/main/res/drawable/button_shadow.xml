        <shape>
            <padding
                android:bottom="2dp"
                android:top="1dp"
                android:right="1dp" />
            <solid android:color="#19933DEC" />
            <corners android:radius="50dp" />
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"/>
            <solid android:color="#1E933DEC" />
            <corners android:radius="50dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:right="1dp" />
            <solid android:color="#23933DEC" />
            <corners android:radius="50dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:right="1dp" />
            <solid android:color="#28933DEC" />
            <corners android:radius="50dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@android:color/white" />
            <corners android:radius="50dp" />
        </shape>
    </item>
</layer-list>