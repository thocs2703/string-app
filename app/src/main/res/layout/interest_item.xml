<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:background="@drawable/border_image_drawable"
        android:padding="@dimen/small_padding"
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/interest_demo"
            android:id="@+id/interest_image"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:contentDescription="@string/interest_image" />

        <TextView
            android:fontFamily="@font/abeezee"
            android:textColor="@android:color/black"
            android:textSize="@dimen/small_text_size"
            android:layout_margin="@dimen/small_margin"
            android:padding="@dimen/small_padding"
            android:text="@string/adventure"
            android:id="@+id/interest_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_gravity="end|top"
            style="@style/CheckBoxStyle"
            android:id="@+id/interest_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

</LinearLayout>
