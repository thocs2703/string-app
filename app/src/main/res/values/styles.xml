<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#9C27B0</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:fontFamily">@font/abeezee</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditTextStyle" parent="@style/TextViewStyle">
        <item name="android:textCursorDrawable">@drawable/drawable_cursor</item>
        <item name="android:background">@null</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="ViewStyle">
        <item name="android:layout_marginStart">@dimen/standard_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="LauncherApp">
        <item name="android:windowBackground">@drawable/ic_rectangle</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

</resources>